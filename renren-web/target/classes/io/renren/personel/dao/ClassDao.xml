<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.personel.dao.ClassDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.personel.entity.ClassEntity" id="classMap">
        <result property="classId" column="class_id"/>
        <result property="className" column="class_name"/>
        <result property="remarks" column="remarks"/>
        <result property="classType" column="class_type"/>
        <result property="lastUpdate" column="last_update"/>
        <result property="teacherId" column="teacher_id"/>
    </resultMap>

	<select id="queryObject" resultType="io.renren.personel.entity.ClassEntity">
		select * from pl_class where class_id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.personel.entity.ClassEntity">
		select * from pl_class
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by class_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from pl_class 
	</select>
	 
	<insert id="save" parameterType="io.renren.personel.entity.ClassEntity" useGeneratedKeys="true" keyProperty="classId">
		insert into pl_class
		(
			`class_name`, 
			`remarks`, 
			`class_type`, 
			`last_update`, 
			`teacher_id`
		)
		values
		(
			#{className}, 
			#{remarks}, 
			#{classType}, 
			#{lastUpdate}, 
			#{teacherId}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.personel.entity.ClassEntity">
		update pl_class 
		<set>
			<if test="className != null">`class_name` = #{className}, </if>
			<if test="remarks != null">`remarks` = #{remarks}, </if>
			<if test="classType != null">`class_type` = #{classType}, </if>
			<if test="lastUpdate != null">`last_update` = #{lastUpdate}, </if>
			<if test="teacherId != null">`teacher_id` = #{teacherId}</if>
		</set>
		where class_id = #{classId}
	</update>
	
	<delete id="delete">
		delete from pl_class where class_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from pl_class where class_id in 
		<foreach item="classId" collection="array" open="(" separator="," close=")">
			#{classId}
		</foreach>
	</delete>

</mapper>